## $Id$

## arguments we want to run parrot with
PARROT_ARGS   :=

## configuration settings
VERSION       := @versiondir@
BIN_DIR       := @bindir@
LIB_DIR       := @libdir@$(VERSION)
DOC_DIR       := @doc_dir@$(VERSION)
MANDIR        := @mandir@$(VERSION)

# Set up extensions
LOAD_EXT      := @load_ext@
O             := @o@

# Various paths
PMC_DIR       := src/pmc
DECNUMBER_DIR := src/decNumber

## Setup some commands
MAKE          := @make_c@
PERL          := @perl@
CAT           := @cat@
CHMOD         := @chmod@
CP            := @cp@
MKPATH        := @mkpath@
RM_F          := @rm_f@
RM_RF         := @rm_rf@
POD2MAN       := pod2man
#IF(parrot_is_shared and not(cygwin or win32)):export LD_RUN_PATH := @blib_dir@:$(LD_RUN_PATH)
PARROT        := $(BIN_DIR)/parrot@exe@
PBC_TO_EXE    := $(BIN_DIR)/pbc_to_exe@exe@
#IF(darwin):
#IF(darwin):# MACOSX_DEPLOYMENT_TARGET must be defined for OS X compilation/linking
#IF(darwin):export MACOSX_DEPLOYMENT_TARGET := @osx_version@

PMC_DEPS := $(PMC_DIR)/decnum.pmc

DECNUMBER_DEPS := \
    $(DECNUMBER_DIR)/decContext.c \
    $(DECNUMBER_DIR)/decQuad.c

DOCS := README

BUILD_CLEANUPS := 

TEST_CLEANUPS :=

# the default target
build-pmc: decnumber pmc

pmc: $(PMC_DEPS)
	$(MAKE) $(PMC_DIR)

decnumber: $(DECNUMBER_DEPS)
	$(MAKE) $(DECNUMBER_DIR)

all: build-pmc

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  build:             Build the dynpmcs."
	@echo "                     This is the default."
	@echo "  install:           Install the installable targets and docs."
	@echo ""
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: build-pmc
#	$(PERL) -I$(LIB_DIR)/tools/lib t/harness --bindir=$(BIN_DIR)

install: build-pmc
	$(MAKE) $(PMC_DIR) install

uninstall:
	$(MAKE) $(PMC_DIR) uninstall

testclean:
	$(RM_F) $(TEST_CLEANUPS)

decnumber_clean:
	$(MAKE) $(DECNUMBER_DIR) clean 

pmc_clean:
	$(MAKE) $(PMC_DIR) clean 

clean: pmc_clean decnumber_clean
	$(RM_F) $(TEST_CLEANUPS) $(BUILD_CLEANUPS)

decnumber_realclean:
	$(MAKE) $(DECNUMBER_DIR) realclean

pmc_realclean:
	$(MAKE) $(PMC_DIR) realclean

realclean: decnumber_realclean pmc_realclean
	$(RM_F) $(TEST_CLEANUPS) $(BUILD_CLEANUPS) Makefile

